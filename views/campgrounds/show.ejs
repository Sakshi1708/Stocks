<%- include("../partials/header") %>
<div class="container">
        <div class="row">
            <div class="col-md-3">
                <h4><%= Website_name %> </h4>
                <ul class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </ul>
            </div>

            <div class="col-md-9">
                <div class="img-thumbnail p-0">
                    <div class="text-center">
                        <img  class="img-thumbnail" src="<%= campground.author.image %>"  " alt="Unable to load image due to network issues"> 
                    </div>
                    
                    <div class="m-2">
                        <h5>
                            <span class="text-primary"><%= campground.name %></span>
                            <span class="text-primary float-right"><%= campground.day %></span>

                            
                            <!-- <span class="float-right">$ <%= campground.price %>/night</span> -->
                        </h5>
                        <p><%= campground.slot %></p>
                        <p><%= campground.description %></p>
                        <p>Transaction Id: <%= campground.txn_id %></p>
                        <p>Bank Transaction Id:<%= campground.btxn_id %></p>
                        <p>Doctor Id:<%= campground.doctor_id %></p>
                        <p><b><em>Submitted by: <%= campground.author.gmailid %></em></b></p>
                        <div>
                            <% if( currentuser && (campground.author.id==(currentuser.id)) ){ %>
                                    <form  action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                                        <a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                                        <button class="btn btn-danger text-dark btn-sm ml-2">Cancel my Appointment</button>
                                        <a class="btn btn-info btn-sm ml-2" href="/campgrounds/final/<%=campground._id %>">Go back</a>
                                    </form>
                                <% } else if( currentuser && (usermail)==doc.email ) { %>
                                    <a class="btn btn-warning btn-sm" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                                    <a class="btn btn-info btn-sm" href="/campgrounds/final/<%=campground._id %>">Go back</a>
                                <% } else { %>
                                    <a class="btn btn-info btn-sm" href="/campgrounds/final/<%=campground._id %>">Go back</a>
                                <% } %>

                        </div>
                        
                    </div>
                </div>
            </div>

        </div>
        <%- include("../partials/footer") %>
</div>

